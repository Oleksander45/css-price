<header class="header ">
    {{>logo}}
    <nav class="header-nav ">
        <div class="head-nav-right">
            {{>nav list=header }}
        </div>
    </nav>
</header>

{{#with main}}
<div class="hero">
    <div class="hero-content">

        <h1 class="hero-title">{{heading}}</h1>
        <p class="hero-p">{{ descriotion}}</p>
    </div>
    <div><img class="hero-picture" src="{{image}}" alt="#" width="500px" height="500px"></div>
</div>
{{/with}}

<main>
    {{#each featured}}
    {{>card-button data=this}}
    {{/each}}
</main>


<div class="form">
    {{#each actions}}
    <div class="form-item">
        <h3 class="form-title"> {{heading}}</h3>
        <a href="{{url}}" class="form-button">{{text}}</a>
    </div>
    {{/each}}
</div>





<footer class="footer">
    <div>
        {{>logo}}
        <span class="copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    {{>nav list=links isVertical=true}}
    {{/each}}
</footer>
</div>