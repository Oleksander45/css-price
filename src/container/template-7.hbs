<div class="hero">
    <h1 class="hero-title">{{hero.title}}</h1>
    <p class="hero-description">{{hero.description}}</p>
    <a href="{{hero.button.url}}" class="hero_button">{{hero.button.text}}</a>
</div>

<div class="about">
    <h3 class="about_title">{{about.heading}}</h3>
    <p class="about-text">{{about.info}}</p>
</div>

<main class="main">
    <div class="main_header">
        <h4 class="m_title">Our Articles</h4>
        <button class="m_button">View All</button>
    </div>

    <div class="card_list">
        {{#each articles}}
        {{>articleCardDark}}
        {{/each}}
    </div>
</main>



